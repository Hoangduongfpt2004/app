<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="invoice.InvoiceActivity">

    <!-- Toolbar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue"
        android:paddingHorizontal="16dp">

        <ImageView
            android:id="@+id/icBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_white" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Thu tiền"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Xong"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Nội dung scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HÓA ĐƠN"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvSoHoaDon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số: 00004"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="4dp"/>

            <TextView
                android:id="@+id/tvSoBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bàn: --"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tvNgay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày: 22/05/2025 (03:00 CH)"
                android:textSize="14sp"
                android:paddingBottom="12dp"/>

            <!-- Table Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_invoice_border"
                android:padding="8dp">

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1,2,3"
                    android:background="@android:color/white">

                    <TableRow>
                        <TextView android:text="Tên món" style="@style/InvoiceHeader"/>
                        <TextView android:text="SL" style="@style/InvoiceHeader"/>
                        <TextView android:text="Đơn giá" style="@style/InvoiceHeader"/>
                        <TextView android:text="Thành tiền" style="@style/InvoiceHeader"/>
                    </TableRow>

                    <!-- Các dòng món sẽ được thêm bằng code -->
                </TableLayout>
            </LinearLayout>

            <!-- Tổng tiền -->
            <TextView
                android:id="@+id/tvTongTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số tiền phải trả: 0 đ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="end"
                android:paddingTop="16dp"/>

            <!-- Tiền khách đưa -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền khách đưa:"
                    android:textSize="16sp"
                    android:textColor="@color/blue"/>

                <EditText
                    android:id="@+id/tvTienKhachDua"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:padding="8dp"
                    android:hint="0" />
            </LinearLayout>

            <!-- Tiền trả lại -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiền trả lại:"
                    android:textSize="16sp"
                    android:textColor="@color/blue"/>

                <TextView
                    android:id="@+id/tvTienTraLai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 đ"
                    android:textSize="16sp"
                    android:gravity="end"
                    android:textColor="@color/blue"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Nút bên dưới -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:padding="12dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnXong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:text="XONG"
            android:textColor="@color/white"/>

    </LinearLayout>

</LinearLayout>
