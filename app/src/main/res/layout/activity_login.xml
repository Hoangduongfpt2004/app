<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/logoImage"
            android:src="@drawable/image"
            tools:ignore="ContentDescription"
            style="@style/Image.LogoLarge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_facebook_button"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:src="@drawable/ic_facebook"
                tools:ignore="ContentDescription"
                style="@style/Image.IconFacebook"/>

            <TextView
                android:id="@+id/txt_Facebook"
                style="@style/App_Text.Facebook"
                android:text="Đăng nhập bằng Facebook" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_google_button"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:src="@drawable/ic_google"
                tools:ignore="ContentDescription"
                style="@style/Image.IconGoogle"/>

            <TextView
                android:id="@+id/txt_Google"
                android:text="Đăng nhập bằng Google"
                android:textColor="@android:color/white"
                style="@style/App_Text.Google"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_phone_button"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:src="@drawable/ic_phone"
                tools:ignore="ContentDescription"
                style="@style/Image.IconPhone"/>

            <TextView
                android:id="@+id/txt_PhoneEmail"
                android:text="Đăng nhập bằng Số điện thoại hoặc email"
                style="@style/App_Text.PhoneEmail"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp">

        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView

                android:text="Bạn chưa có tài khoản?"
                style="@style/App_Text.BanChuaCoTaiKhoan"/>

            <TextView
                android:id="@+id/tvRegister"
                android:text=" Đăng ký"
                style="@style/App_Text.Register"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
