<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddProduct.Add_ProductActivity">

    <!-- Tiêu đề và nút đóng -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="#2196F3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa đơn vị tính"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/btnCloseAdd"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close_white"
            android:contentDescription="Đóng"
            android:padding="4dp"/>
    </RelativeLayout>

    <!-- EditText nhập tên -->
    <EditText
        android:id="@+id/edtNewUnitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên đơn vị tính mới"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@android:drawable/editbox_background" />

    <!-- Nút -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HỦY BỎ"
            android:textColor="#DB2C1F"
            android:background="@drawable/button_cancel_background"
            android:padding="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CẤT"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_save_background"
            android:layout_marginStart="8dp"
            android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>
