<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".banhang.view.BanHangActivity">

    <!-- Nội dung chính -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            app:title="Bán hàng"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white" />

        <!-- Nội dung chính -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="?attr/actionBarSize">

            <ImageView
                android:id="@+id/imgEmpty"
                android:src="@drawable/logocuckcuk"
                android:contentDescription="@string/app_name"
                style="@style/Image.Logo"/>

            <TextView
                android:id="@+id/tvNoOrders"
                android:text="Chưa có khách gọi món"
                style="@style/App_Text.NoOrders"/>

            <TextView
                android:id="@+id/tvHint"
                android:text="Bấm vào đây hoặc dấu + để chọn món"
                style="@style/App_Text.Hint"/>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_main"
        app:headerLayout="@layout/activity_giao_dien_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
