<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sychronize.SychronizeActivity">


    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorPrimaryDark">

            <ImageButton
                android:id="@+id/ivBack_One"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_back_white_add"
                android:background="@null"
                android:scaleType="centerInside" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Đồng bộ dữ liệu"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Banner hình ảnh -->

        <!-- Thông tin và nút đồng bộ -->
        <ImageView
            android:id="@+id/imgBanner"
            android:layout_width="match_parent"
            android:layout_height="202dp"
            android:scaleType="fitCenter"
            android:src="@drawable/dongbo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvLastSync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đồng bộ lần cuối: 13/05/2025 08:58 SA"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/edtSyncInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/button_background"
                android:hint="Đồng Bộ Ngay"
                android:textColor="@android:color/white"
                android:textColorHint="#F2F2F4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:imeOptions="actionDone"/>


        </LinearLayout>




    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>