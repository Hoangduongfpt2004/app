<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:id="@+id/mainthucdon"
    >

    <!-- Thanh tiêu đề màu xanh -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary_color">

        <ImageView
            android:id="@+id/ivBack"
            android:src="@drawable/ic_arrow_back_white"
            android:contentDescription="Back"
            style="@style/Image_Back"/>

        <TextView
            android:id="@+id/tvTitle"
            android:text="Thêm món"
            android:layout_centerInParent="true"
            style="@style/App_Base_Them_Mon"/>

        <TextView
            android:id="@+id/tvSave"
            android:text="Cất"
            android:textColor="@android:color/white"
            style="@style/App_Base_Cat"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tên món -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên món *"
                android:textSize="18sp"
                android:textColor="@color/textPrimary" />

            <EditText
                android:id="@+id/edtItemName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Nhập tên món"
                android:background="@null"
                android:textSize="18sp"
                android:textColor="@color/textPrimary"
                android:gravity="end" />
        </LinearLayout>

        <!-- Giá bán -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giá bán"
                android:textSize="18sp"
                android:textColor="@color/textPrimary" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:textColor="@color/textPrimary"
                android:gravity="end" />
        </LinearLayout>

        <!-- Đơn vị tính -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đơn vị tính *"
                android:textSize="18sp"
                android:textColor="@color/textPrimary" />

            <TextView
                android:id="@+id/tvUnit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Bao"
                android:textSize="18sp"
                android:textColor="@color/textPrimary"
                android:gravity="end" />
        </LinearLayout>

        <!-- Màu sắc và biểu tượng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/btn_color"
                    android:src="@drawable/ic_palette"
                    android:contentDescription="Màu sắc"
                    style="@style/Image_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Màu sắc"
                    android:textColor="@color/textSecondary"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/hoicham"
                    android:src="@drawable/ic_question"
                    android:contentDescription="Biểu tượng"
                    style="@style/Image_hoicham"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Biểu tượng"
                    android:textColor="@color/textSecondary"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btnSave"
        android:text="CẤT"
        android:textAllCaps="true"
        style="@style/btn_Save"/>

</LinearLayout>
