<resources>

    <!-- App Text Styles -->
    <style name="App_Text" parent="App_Base_Text" />

    <style name="App_Text.Agreement" parent="App_Base_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#070707</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="App_Text.KhoiPhucMatKhau" parent="App_Base_Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0075C0</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="App_Text.LogoImage">
        <item name="android:layout_width">700dp</item>
        <item name="android:layout_height">303dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="App_Text.LogoPhoneOrEmail">
        <item name="android:layout_width">311dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="App_Text.QuenMatKhau" parent="App_Base_Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="App_Text.Facebook" parent="App_Base_Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App_Text.Google" parent="App_Text.Facebook" />
    <style name="App_Text.PhoneEmail" parent="App_Text.Facebook" />

    <style name="App_Text.BanChuaCoTaiKhoan" parent="App_Base_Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="App_Text.Register" parent="App_Base_Text">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="App_Text.NoOrders" parent="App_Base_Text">
        <item name="android:titleMarginTop">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintTop_toBottomOf">@id/imgEmpty</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:layout_marginTop">16dp</item>

    </style>

    <style name="App_Text.Hint" parent="App_Base_Text">
        <item name="android:titleMarginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#131314</item>
        <item name="layout_constraintTop_toBottomOf">@id/tvNoOrders</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="App_Text.AppTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="App_Text.ForgotPassword">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Time Label Style -->
    <style name="App_txtTimeLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="App_txtTimeFilter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- Base Text Styles -->
    <style name="App_Base_Text.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="App_Base_Text.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="App_Base_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App_Base_Text_Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="App_Base_Text_Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <!-- Button Styles -->
    <style name="App_Base_Them_Mon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="App_Base_Cat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


    <style name="Lay_Toan_Bo_Du_Lieu" parent="Base_Text">
        <item name="android:background">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">#888888</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Bieu_Tuong_Them_Icon" parent="Base_Text">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Mau_Sac_Icon" parent="Base_Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <style name="Tieu_De_Don_Vi_Tinh">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="tv_price">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:gravity">end</item>
    </style>
    <style name="Tieu_De_Gia_Ban">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Tieu_De_Ten_Mon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Sua_Don_Vi_Tinh" parent="Base_ImageView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="tvTitle_MayTinh">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#2196F3</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Id_ChonMon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="tv_ThuTien" parent="Base_Text">
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">#F8F6F6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="tv_Moony" parent="Base_Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="tv_Tong_Tien">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">16dp</item>

    </style>

    <style name="tv_Cat" parent="Base_Text">
        <item name="android:textColor">#1565C0</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>



</resources>
