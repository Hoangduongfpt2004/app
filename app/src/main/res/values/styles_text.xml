<resources>

    <!-- App Text Styles -->
    <style name="App_Text" parent="App_Base_Text" />

    <style name="App_Text.Agreement" parent="App_Base_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#070707</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="App_Text.KhoiPhucMatKhau" parent="App_Base_Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0075C0</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="App_Text.LogoImage">
        <item name="android:layout_width">700dp</item>
        <item name="android:layout_height">303dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="App_Text.LogoPhoneOrEmail">
        <item name="android:layout_width">311dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="App_Text.QuenMatKhau" parent="App_Base_Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="App_Text.Facebook" parent="App_Base_Text">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App_Text.Google" parent="App_Text.Facebook" />
    <style name="App_Text.PhoneEmail" parent="App_Text.Facebook" />

    <style name="App_Text.BanChuaCoTaiKhoan" parent="App_Base_Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="App_Text.Register" parent="App_Base_Text">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="App_Text.NoOrders" parent="App_Base_Text">
        <item name="android:titleMarginTop">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#03A9F4</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App_Text.Hint" parent="App_Base_Text">
        <item name="android:titleMarginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#131314</item>
    </style>

    <style name="App_Text.AppTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="App_Text.ForgotPassword">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Time Label Style -->
    <style name="App_txtTimeLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="App_txtTimeFilter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- Base Text Styles -->
    <style name="App_Base_Text.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="App_Base_Text.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="App_Base_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="App_Base_Text_Large">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="App_Base_Text_Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <!-- Button Styles -->
    <style name="App_Base_Them_Mon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="App_Base_Cat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

</resources>
