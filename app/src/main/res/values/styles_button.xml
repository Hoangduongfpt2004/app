<resources>

    <style name="Button.Register" parent="Base_Button">
        <item name="android:layout_marginTop">32dp</item>
    </style>

    <style name="Button.RecoverPassword" parent="Base_Button">
        <item name="android:layout_marginTop">30dp</item>
    </style>

    <style name="Button.Login" parent="Base_Button">
        <item name="android:layout_width">367dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:backgroundTint">#005ea5</item>
        <item name="android:textColor">@color/design_default_color_background</item>
    </style>


        <style name="Button_login">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">48dp</item>
            <item name="android:backgroundTint">@color/blue_dark</item>
            <item name="android:textColor">@android:color/white</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">16sp</item>
            <item name="android:layout_marginTop">24dp</item>
        </style>

    <style name="Base_Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="Base_Button234">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">#0075C0</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="btn_Save">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_margin">4dp</item>
    </style>


    <style name="btnCancel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTintMode">src_in</item>
        <item name="android:background">@drawable/button_cancel_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#DB2C1F</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="btnSave_one">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="backgroundTintMode">src_in</item>
        <item name="android:background">@drawable/button_save_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">8dp</item>

    </style>


    <style name="btn_ThuTien">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:background">@drawable/bg_dialog</item>
        <item name="android:backgroundTint">#1565C0</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>


    </style>










</resources>
