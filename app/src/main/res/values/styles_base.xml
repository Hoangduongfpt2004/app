<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="Base_EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="Base_Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#0075C0</item>
    </style>

    <style name="Base_ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="img_icon_day">
        <item name="android:layout_width">29dp</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="font_size">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Base_Cloes">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Base_Button.Done">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">#EFEFEE</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_button_done</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Base_Image_Back">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="layout_goneMarginStart">16dp</item>

    </style>





</resources>
